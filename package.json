{
  "name": "neo-dapi",
  "description": "Monorepo for Neo Dapi",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --stream build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "watch": "lerna run --parallel watch",
    "version": "cross-env npm_execpath=yarn run-s lint build test",
    "new-version": "lerna version --force-publish",
    "new-version:alpha": "lerna version prerelease --yes",
    "publish": "lerna publish from-package",
    "publish:alpha": "lerna publish from-package --dist-tag alpha",
    "release": "run-s new-version publish",
    "release:alpha": "run-s new-version:alpha publish:alpha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-ngd/neo-dapi.git"
  },
  "keywords": [
    "neo",
    "dapi",
    "provider",
    "jsonrpc"
  ],
  "author": "neo-ngd <github.com/neo-ngd>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neo-ngd/neo-dapi/issues"
  },
  "homepage": "https://github.com/neo-ngd/neo-dapi#readme",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
